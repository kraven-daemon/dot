! reassigning modifier
! get modifier : xmodmap -pm
! clear modifier, add keysymbol, then readd modifier to it.
! clear modifier
! keycode N = `Keyboard Event Name`
! add modifier = `Keyboard Event Name`

! Capslock to esc
clear lock
keycode 66 = Escape
keycode 9 = Caps_Lock
add lock = Caps_Lock

clear shift
clear control
keycode 62 = Control_R
keycode 105 = Shift_R
add shift = Shift_L Shift_R
add control = Control_L Control_R

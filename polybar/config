; Global settings
; at https://github.com/polybar/polybar/wiki/Configuration
; launch bar after executing xrdb 
; <font-name>:size=12:style/weight;<vertical-offset>

[colors]
# = ${xrdb:key:fallbackvalue}
bg = ${xrdb:background:#554467}
fg = ${xrdb:foreground}
cursor = ${xrdb:cursorColor}
black = ${xrdb:color0}
bblack = ${xrdb:color8}
red = ${xrdb:color1}
bred = ${xrdb:color9}
green = ${xrdb:color2}
bgreen = ${xrdb:color10}
yellow = ${xrdb:color3}
byellow = ${xrdb:color11}
blue = ${xrdb:color4}
bblue = ${xrdb:color12}
magenta = ${xrdb:color5}
bmagenta = ${xrdb:color13}
cyan = ${xrdb:color6}
bcyan = ${xrdb:color14}
white = ${xrdb:color7}
bwhite = ${xrdb:color15}

[settings]
throttle-output = 5
throttle-output-for = 10
screenchange-reload = false
pseudo-transparency = false

[global/wm] 
margin-bottom = 2
margin-top = 2

[bar/status]
# aEsthetic
background = ${colors.bg}
foreground = ${colors.fg}
height = 20
;bottom = false
;override-redirect = true

modules-left = powermenu
modules-center = title

modules-right = date
font-0 = SauceCodePro Nerd Font Mono:size=12:style=Bold;2
fixed-center = false

[module/time]
type = internal/date
interval = 2.0
date = %R

[module/date]
type = internal/date
; See "https://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = %Y %B %d, %A
format = <label>
format-prefix = " "
format-suffix = " "
format-background = ${colors.green}
format-foreground = ${colors.bg}

[module/title]
type = internal/xwindow
format= <label>
label = %title%

[module/cpu]
type = internal/cpu
interval = 2.0
format-prefix = "O: "
format-prefix-foreground = ${colors.fg}
label = "%percentage:2%%"


[bar/menu]
bottom = true
modules-right = menu

[module/menu]
type = custom/menu
; action => open,close,exec
;expan-right = true
label-open-foreground = ${colors.black}
label-open-background = ${colors.byellow}
label-close-background = ${colors.magenta}
label-close-foreground = ${colors.black}
label-separator-foreground = ${colors.yellow}
; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Commands will be executed using "/bin/sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = #menu.open.1
menu-0-1 = Multimedia
menu-0-1-exec = #menu.open.2
menu-1-0 = Firefox
menu-1-1 = Chromium
menu-2-0 = Gimp
menu-2-1 = Scrot

label-open = Apps
label-close = Apps
label-separator = " <|> "
; vim:ft=dosini
